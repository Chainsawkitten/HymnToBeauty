layout(local_size_x = 64, local_size_y = 1, local_size_z = 1 ) in;

PUSH_CONSTANTS
{
    vec4 color;
} pushConst;

UNIFORMS
{
    vec4 color;
} uniforms;

STORAGE_BUFFER_RW
{
    vec4 color;
} storageBuffer;

void main() {
    uint index = gl_GlobalInvocationID.x;
    
    if (index > 0)
        return;

    storageBuffer.color = pushConst.color * uniforms.color;
}
